<yas>

    <scene root="ss" axis_length="5" />
 
    <views default="view1" >
        <perspective id="view1" near="0.1" far="500" angle="20">
            <from x="15" y="15" z="15" />
            <to x="0" y="0" z="0" />
        </perspective>
 
 
        <ortho id="view2" near="1" far="1" left="1" right="1" top="1" bottom="1" />
    </views>
 
    <ambient>
        <ambient r="0.4" g="0.4" b="0.4" a="1.0"/>
        <background r="0.34" g="0.69" b="0.96" a="1.0"/>
    </ambient>

    <lights>
        <omni id="light-1" enabled="1">
            <location x="0" y="15" z="0" w="0"/>
            <ambient r="0" g="0" b="0" a="1.0"/>
            <diffuse r="0.9" g="0.9" b="0.9" a="1"/>
            <specular r="0.6" g="0.7" b="1.0" a="1.0"/>
        </omni>

         <omni id="light-2" enabled="1">
            <location x="0" y="5" z="8" w="1"/>
            <ambient r="0.15" g="0.15" b="0.15" a="1.0"/>
            <diffuse r="0.35" g="0.35" b="0.35" a="1.0"/>
            <specular r="0.8" g="0.8" b="0.8" a="1.0"/>
        </omni>

        <spot id="light-3" enabled="1" angle="30" exponent="15">
            <location x="5" y="15" z="5" w="10"/>
            <target x="10" y="10" z="10"/>
            <ambient r="0.10" g="0.1" b="0.1" a="1"/>
            <diffuse r="1" g="1" b="1" a="1"/>
            <specular r="1" g="1" b="1" a="1"/>
        </spot>
    </lights>

     <textures>
        <texture id="boardtxt" file="images/board.jpg"/>
        <texture id="walltxt" file="images/wall.jpg"/>
        <texture id="floortxt" file="images/wood.jpg"/>
        <texture id="rugtxt" file="images/rug.jpg"/>
        <texture id="blacktxt" file="images/table.jpg"/>
        <texture id="spheretxt" file="images/white.jpg"/>
        <texture id="gametxt" file="images/trivial.jpg"/>
        <texture id="metaltxt" file="images/metal.jpg"/>

    </textures>

     <materials>
        <material id="ss" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="0"/>
            <ambient r="0.7" g="0.7" b="0.7" a="1"/>
            <diffuse r="0.7" g="0.7" b="0.5" a="1"/>
            <specular r="0.5" g="0.7" b="0.8" a="1"/>
        </material>
    </materials>

     <transformations>  
       
        <transformation id="wall1">
            <translate x="5" y="5" z="0"/>
            <scale x="10" y="10" z="10"/>
            <translate x="-1.5" y="-1.5" z="0"/>
        </transformation>

        <transformation id="wall2">
            <translate x="-0.5" y="0" z="0.5"/>
            <rotate axis="y" angle= "90"/>
            <translate x="-1.5" y="0" z="1.5"/>
         </transformation>
         
         <transformation id="floor">
            <translate x="0" y="1" z="-1"/>
            <rotate axis="x" angle= "90"/>   
        </transformation>
        
    </transformations>


     <primitives>
        <primitive id="MyRectangle">
            <rectangle x1="1" y1="1" x2="2" y2="2"/>
        </primitive>

        <primitive id="MyCylinder">
           <cylinder base="1" top="1" height="1" stacks="1" slices="64"/>
        </primitive>

        <primitive id="MySphere">
           <sphere radius="1" stacks="32" slices="64"/>
        </primitive>
    </primitives>


     <components>
        <!-- Wall1 -->
        <component id="ss">
            <transformation>
                <transformationref id="wall1"/>
            </transformation>

            <materials>
                <material id="ss"/>
            </materials>
        
             <texture id="walltxt" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="MyRectangle"/>
                <componentref id="wall"/>
                <componentref id="board"/>
                <componentref id="rug"/>
                <componentref id="table"/>
                <componentref id="seats"/>
                <componentref id="game"/>
                <componentref id="lamp"/>
                <componentref id="tv"/>
                <componentref id="button"/>
            </children>
         </component>

        <!-- Wall2 -->
         <component id="wall">
            <transformation>
                <transformationref id="wall2"/>
            </transformation>

            <materials>
                <material id="ss"/>
            </materials>
        
             <texture id="walltxt" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="MyRectangle"/>
                <componentref id="s2"/>
            </children>
         </component>

         <!-- Floor -->
         <component id="s2">
             <transformation>
                <transformationref id="floor"/>
            </transformation>

            <materials>
                <material id="ss"/>
            </materials>
        
            <texture id="floortxt" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="MyRectangle"/>
            </children>
         </component>


        <!-- Board -->
         <component id="board">
             <transformation>
                <translate x="0.4" y="1.15" z="0.01"/>
                 <scale x="0.75" y="0.3" z="1"/>
            </transformation>

            <materials>
                <material id="ss"/>
            </materials>
        
            <texture id="boardtxt" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="MyRectangle"/>
            </children>
         </component>

         <!-- Rug -->
         <component id="rug">
             <transformation>
                <translate x="0.3" y="1.001" z="-0.7"/>
                <rotate axis="x" angle= "90"/> 
                <scale x="0.8" y="0.8" z="1"/>
            </transformation>

            <materials>
                <material id="ss"/>
            </materials>
        
            <texture id="rugtxt" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="MyRectangle"/>
            </children>
         </component>

        <!-- Table -->
        <component id="table">
            <transformation>
                <translate x="0.75" y="0.90" z="-0.11"/>
                <scale x="0.5" y="0.09" z="0.3"/>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="blacktxt" length_s="1" length_t="1"/>
            <children>
                <componentref id="cube-lado1"/>
                <componentref id="cube-lado2"/>
                <componentref id="cube-lado3"/>
                <componentref id="cube-lado4"/>
                <componentref id="cube-lado5"/>
                <componentref id="cube-lado6"/>
            </children>
        </component>    

        <component id="cube-lado1">
            <transformation>
                <translate x="0" y="0" z="1.5"/>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="blacktxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyRectangle"/>
            </children>
        </component>

       <component id="cube-lado2">
            <transformation>
                <translate x="0" y="0" z="2.5"/>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="blacktxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyRectangle"/>

            </children>
        </component>

        <component id="cube-lado3">
            <transformation>
                <translate x="0" y="1" z="0.5"/>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="blacktxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyRectangle"/>

            </children>
        </component>

        <component id="cube-lado4">
            <transformation>
                <translate x="0" y="2" z="0.5"/>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="blacktxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyRectangle"/>

            </children>
        </component>

         <component id="cube-lado5">
            <transformation>
                <translate x="1" y="0" z="3.5"/>
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="blacktxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyRectangle"/>

            </children>
        </component>

         <component id="cube-lado6">
            <transformation>
                <translate x="2" y="0" z="3.5"/>
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="blacktxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyRectangle"/>
            </children>
        </component>

        <!-- Seats -->
        <component id="seats">
            <transformation>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="blacktxt" length_s="1" length_t="1"/>
            <children>
                <componentref id="seat1"/>
                <componentref id="seat2"/>
                <componentref id="seat3"/>
                <componentref id="seat4"/>
            </children>
        </component>

        <component id="seat1">
            <transformation>
            <translate x="1.5" y="1" z="0.7"/>
                <scale x="0.05" y="0.05" z="0.05" />
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="blacktxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyCylinder"/>
            </children>
        </component>

         <component id="seat2">
            <transformation>
            <translate x="1.5" y="1" z="0.3"/>
                <scale x="0.05" y="0.05" z="0.05" />
            </transformation>
            <materials>
                 <material id="inherit"/>
            </materials>
            <texture id="blacktxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyCylinder"/>
            </children>
        </component>

         <component id="seat3">
            <transformation>
            <translate x="1.19" y="1" z="0.49"/>
                <scale x="0.05" y="0.05" z="0.05" />
            </transformation>
            <materials>
                 <material id="inherit"/>
            </materials>
            <texture id="blacktxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyCylinder"/>
            </children>
        </component>

         <component id="seat4">
            <transformation>
            <translate x="1.82" y="1" z="0.49"/>
                <scale x="0.05" y="0.05" z="0.05"/>
            </transformation>
            <materials>
                 <material id="inherit"/>
            </materials>
            <texture id="blacktxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyCylinder"/>
            </children>
        </component>

        <!-- Boardgame -->
         <component id="game">
             <transformation>
                <translate x="1.265" y="1.085" z="0.27"/>
                <scale x="0.15" y="0.0001" z="0.15"/>
                <rotate axis="x" angle= "90"/>  
            </transformation>

            <materials>
                <material id="ss"/>
            </materials>
        
            <texture id="gametxt" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="MyRectangle"/>
            </children>
         </component>
         
        <!-- Lamp -->
        <component id="lamp">
            <transformation>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="blacktxt" length_s="1" length_t="1"/>
            <children>
                <componentref id="base"/>
                <componentref id="cabo1"/>
                <componentref id="suporte"/>
                <componentref id="sphere"/>
            </children>
        </component>

        <component id="base">
            <transformation>
                <translate x="1.10" y="1.0" z="0.10"/>
                <scale x="0.05" y="0.01" z="0.05"/>
            </transformation>
            <materials>
                 <material id="inherit"/>
            </materials>
            <texture id="metaltxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyCylinder"/>
            </children>
        </component>

         <component id="cabo1">
            <transformation>
                <translate x="1.10" y="1.0" z="0.10"/>
                <scale x="0.009" y="0.4" z="0.009"/>
            </transformation>
            <materials>
                 <material id="inherit"/>
            </materials>
            <texture id="metaltxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyCylinder"/>
            </children>
        </component>

        <component id="suporte">
            <transformation>
                <translate x="1.10" y="1.4" z="0.10"/>
                <scale x="0.01" y="0.01" z="0.01"/>
            </transformation>
            <materials>
                 <material id="inherit"/>
            </materials>
            <texture id="blacktxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyCylinder"/>
            </children>
        </component>

        <component id="sphere">
            <transformation>
                <translate x="1.1" y="1.455" z="0.1"/>
                 <scale x="0.05" y="0.05" z="0.05"/>
                
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="spheretxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MySphere"/>
            </children>
        </component>

        <!-- Tv -->
        <component id="tv">
            <transformation>
                 <translate x="1.017" y="0.66" z="-0.75"/>
                 <rotate axis="z" angle="90"/>
                 <scale x="0.3" y="0.01" z="0.5"/>
                 <translate x="1.3" y="-0.5" z="0.5"/>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="blacktxt" length_s="1" length_t="1"/>
            <children>
                <componentref id="cube-lado1"/>
                <componentref id="cube-lado2"/>
                <componentref id="cube-lado3"/>
                <componentref id="cube-lado4"/>
                <componentref id="cube-lado5"/>
                <componentref id="cube-lado6"/>
            </children>
        </component> 

        <!-- Tv button-->
        <component id="button">
            <transformation>
                 <translate x="1.1" y="1.5" z="0.3"/>
                 <rotate axis="z" angle="90"/>
                 <scale x="0.01" y="0.007" z="0.01"/>
                 <translate x="1.3" y="-0.5" z="0.5"/>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="boardtxt" length_s="1" length_t="1"/>
            <children>
                <componentref id="cube-lado1"/>
                <componentref id="cube-lado2"/>
                <componentref id="cube-lado3"/>
                <componentref id="cube-lado4"/>
                <componentref id="cube-lado5"/>
                <componentref id="cube-lado6"/>
            </children>
        </component> 

        <!-- Visor -->
         <component id="visor">
             <transformation>
                <translate x="1.3" y="0.66" z="-0.75"/>
                 <rotate axis="z" angle="90"/>
                 <scale x="0.3" y="0.01" z="0.5"/>
                 <translate x="1.3" y="-0.5" z="0.5"/> 
            </transformation>

            <materials>
                <material id="ss"/>
            </materials>
        
            <texture id="boardtxt" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="MyRectangle"/>
            </children>
         </component>
    
    </components>
  </yas> 
