 <yas>

    <scene root="ss" axis_length="5" />
 
    <views default="view1" >
        <perspective id="view1" near="0.1" far="500" angle="20">
            <from x="15" y="15" z="15" />
            <to x="0" y="0" z="0" />
        </perspective>
 
 
        <ortho id="view2" near="1" far="1" left="1" right="1" top="1" bottom="1" />
    </views>
 
    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0"/>
        <background r="0.5" g="0.5" b="0.5" a="1" />
    </ambient>
 
    <lights>
        <omni id="light1" enabled="1" >
            <location x="5" y="7" z="15" w="1"/>
            <ambient r="0.2" g="0.2" b="0.2" a="1.0"/>
            <diffuse r="0.3" g="0.4" b="0.25" a="1.0"/>
            <specular r="0.9" g="0.8" b="0.7" a="1.0"/>
            
        </omni>

        <spot id="light2" enabled="0" angle="20" exponent="15">
            <location x="1" y="1" z="1" w="1" />
             <target x="45" y="0" z="10"/>
            <ambient r="0.2" g="0.2" b="0.2" a="1.0"/>
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" /> 
        </spot>
     </lights>

     <textures>
        <texture id="boardtxt" file="images/board.jpg" />
        <texture id="banktxt" file="images/bank.jpg" />
        <texture id="floortxt" file="images/wood.jpg" />
        <texture id="rugtxt" file="images/rug.jpg" />
        <texture id="redtxt" file="images/red.jpg" />

    </textures>

     <materials>

        <material id="ss" shininess = "0.1" >
            <emission r="1" g="1" b="1" a="1" />
            <ambient r="1" g="1" b="1" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </material>
    </materials>

     <transformations>  
       
        <transformation id="wall1">
            <translate x="5" y="5" z="0" />
            <scale x="10" y="10" z="10" />>
            <translate x="-1.5" y="-1.5" z="0" />
        </transformation>

        <transformation id="wall2">
            <translate x="-0.5" y="0" z="0.5" />
            <rotate axis="y" angle= "90"/>
            <translate x="-1.5" y="0" z="1.5" />
         </transformation>
         
         <transformation id="floor">
            <translate x="0" y="1" z="-1" />
            <rotate axis="x" angle= "90"/>   
        </transformation>
        
    </transformations>


     <primitives>
        <primitive id="MyRectangle">
            <rectangle x1="1" y1="1" x2="2" y2="2" />
        </primitive>
    </primitives>


     <components>
        <!-- Wall1 -->
        <component id="ss">
            <transformation>
                <transformationref id="wall1" />
            </transformation>

            <materials>
                <material id="ss" />
            </materials>
        
             <texture id="banktxt" length_s="1" length_t="1" />

            <children>
                <primitiveref id="MyRectangle" />
                <componentref id="s1" />
                <componentref id="board" />
                <componentref id="rug" />
                <componentref id="cube" />
            </children>
         </component>

        <!-- Wall2 -->
         <component id="s1">
            <transformation>
                <transformationref id="wall2" />
            </transformation>

            <materials>
                <material id="ss" />
            </materials>
        
             <texture id="banktxt" length_s="1" length_t="1" />

            <children>
                <primitiveref id="MyRectangle" />
                <componentref id="s2" />
            </children>
         </component>

         <!-- Floor -->
         <component id="s2">
             <transformation>
                <transformationref id="floor" />
            </transformation>

            <materials>
                <material id="ss" />
            </materials>
        
            <texture id="floortxt" length_s="1" length_t="1" />

            <children>
                <primitiveref id="MyRectangle" />
            </children>
         </component>


        <!-- Board -->
         <component id="board">
             <transformation>
                <translate x="1.05" y="1" z="0" />
                 <scale x="0.3" y="0.3" z="1" />
            </transformation>

            <materials>
                <material id="ss" />
            </materials>
        
            <texture id="boardtxt" length_s="1" length_t="1" />

            <children>
                <primitiveref id="MyRectangle" />
            </children>
         </component>

         <!-- Rug -->
         <component id="rug">
             <transformation>
                <translate x="0.5" y="1.001" z="0.2" />
                <rotate axis="x" angle= "90"/> 
                <scale x="0.7" y="0.3" z="1" />
            </transformation>

            <materials>
                <material id="ss" />
            </materials>
        
            <texture id="rugtxt" length_s="1" length_t="1" />

            <children>
                <primitiveref id="MyRectangle" />
            </children>
         </component>


        <component id="cube-lado1">
            <transformation>
                <translate x="0" y="0" z="1.5"/>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="redtxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyRectangle"/>
            </children>
        </component>

       <component id="cube-lado2">
            <transformation>
                <translate x="0" y="0" z="2.5"/>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="redtxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyRectangle"/>

            </children>
        </component>

        <component id="cube-lado3">
            <transformation>
                <translate x="0" y="1" z="0.5"/>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="redtxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyRectangle"/>

            </children>
        </component>

        <component id="cube-lado4">
            <transformation>
                <translate x="0" y="2" z="0.5"/>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="redtxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyRectangle"/>

            </children>
        </component>

         <component id="cube-lado5">
            <transformation>
                <translate x="1" y="0" z="3.5"/>
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="redtxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyRectangle"/>

            </children>
        </component>

         <component id="cube-lado6">
            <transformation>
                <translate x="2" y="0" z="3.5"/>
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="redtxt" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="MyRectangle"/>
            </children>
        </component>

        <component id="cube">
            <transformation>
                <translate x="0.5" y="2" z="0"/>
                <scale x="0.7" y="-0.1" z="0.3" />
            </transformation>
            <materials>
                <material id="ss"/>
            </materials>
            <texture id="redtxt" length_s="1" length_t="1"/>
            <children>
                <componentref id="cube-lado1"/>
                <componentref id="cube-lado2"/>
                <componentref id="cube-lado3"/>
                <componentref id="cube-lado4"/>
                <componentref id="cube-lado5"/>
                <componentref id="cube-lado6"/>
            </children>
        </component>

    
    </components>
  </yas> 
